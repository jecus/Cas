  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\EntityCore\EntityCore.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Content Update="AppSettings.json">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

